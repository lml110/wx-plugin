/* 地址 */
.bombbox{
    position: fixed;
    bottom: 0;
    width: 100%;
    -webkit-transform: translate(0,100%);
    transform: translate(0,100%);
    z-index: 10;
    -webkit-transition:-webkit-transform 0.3s;
    transition:transform 0.3s;
}
.bombbox.active{
    -webkit-transform: translate(0,0);
    transform: translate(0,0);
}
