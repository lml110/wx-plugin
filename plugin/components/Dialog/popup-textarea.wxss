.wx-mask {
    position: fixed;
    z-index: 10;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.wx-dialog {
    position: fixed;
    top: 50%;
    left: 50%;
    bottom: 0;
    width: 75%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    z-index: 10;
    border-radius: 10rpx;
    overflow: hidden;
}
.popup-tit{
    height: 80rpx;
    display:-webkit-box;
    -webkit-box-pack:center;
    -webkit-box-align:center;
    background-color: #f5f5f5;
}
.popup-btns{
    background-color: #f5f5f5;
    display:-webkit-box;
    -webkit-box-pack:center;
    -webkit-box-align:center;
    border-radius: 0 0 12rpx 12rpx;
}
.popup-btn{
    display:-webkit-box;
    -webkit-box-pack:center;
    -webkit-box-align:center;
    color: #0c85fe;
    -webkit-box-flex:1;
    height: 86rpx;
    position: relative;
}
.popup-btn-bdr:after{ position: absolute;right:0; bottom: 0; top: 0; width: 1px; background-color: #ddd; content: '';  transform: scaleX(0.5); -webkit-transform: scaleX(0.5);}

.popup-cont{
    background-color: #fff;
    padding: 10rpx 20rpx;
}
.textarea{
    display: block;
    width: 100%;
    height: 150rpx;

}
.popup-btn:active{
    opacity: .7;
    background-color: #eee;
}