.wx-mask {
    position: fixed;
    z-index: 10;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.wx-dialog {
    position: fixed;
    z-index: 10;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    
    border-radius: 10rpx;
    overflow: hidden;
}
.wx-dialog-title {
    text-align: center;
    font-size: 34rpx;
    padding: 20rpx 0;
}
.wx-dialog-content {
    padding: 16rpx 28rpx 30rpx;
    
    font-size: 30rpx;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
    text-align: center;
}
.dialog-content{
    padding: 16rpx 22rpx 30rpx;
    font-size: 28rpx;
}

.wx-dialog-footer {
    display: flex;
    align-items: center;
    position: relative;
    line-height: 86rpx;
    text-align: center;
}
.wx-dialog-footer::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D5D5D6;
    color: #D5D5D6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.wx-dialog-btn {
    display: block;
    -webkit-flex: 1;
    flex: 1;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
    font-size: 32rpx;
}
.wx-dialog-cancel {
    color: #353535;
}
.wx-dialog-cancel:after {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-right: 1px solid #D5D5D6;
    color: #D5D5D6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
}
.wx-dialog-btn:active{
    opacity: .7;
    background-color: #eee;
}
.wx-dialog-disable{
    opacity: 0.7;
}
